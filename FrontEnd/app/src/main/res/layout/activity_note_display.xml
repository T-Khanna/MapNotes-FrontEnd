<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColorSecondary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/full_note_view"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/cancel_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_close"
            android:layout_marginBottom="20dp"
            android:textColor="@color/textColorPrimary"/>

        <ImageView
            android:id="@+id/edit_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cancel_button"
            android:layout_toLeftOf="@+id/edit_button"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/textColorPrimary"
            android:textSize="25sp"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColorPrimary"
                android:orientation="vertical"
                android:elevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_access_time"
                        android:id="@+id/time_image"
                        android:layout_alignParentLeft="true"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/time_image">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:id="@+id/start_date"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="6dp"
                            android:textSize="15sp"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:textSize="15sp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="32dp"
                            android:layout_marginBottom="8dp"
                            android:id="@+id/start_time"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/start_date"
                            android:id="@+id/end_date"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="8dp"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/start_time"
                            android:textSize="15sp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="32dp"
                            android:id="@+id/end_time"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="8dp"
                        android:id="@+id/pin_icon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:id="@+id/location_text"
                        android:layout_marginRight="32dp"
                        android:layout_toRightOf="@+id/pin_icon"
                        android:text="Location"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textSize="15dp"
                    android:id="@+id/description"/>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/tag_container"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/textColorPrimary"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="2dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_label"
                    android:id="@+id/tag_icon"/>

                <co.lujun.androidtagview.TagContainerLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/tag_view"
                    android:layout_toRightOf="@+id/tag_icon"
                    android:padding="8dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="16dp"/>
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:background="@color/textColorPrimary"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:id="@+id/horizontal_scroll_images"
                android:visibility="gone"
                android:elevation="2dp">

                <LinearLayout
                    android:id="@+id/image_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:elevation="2dp"
                android:layout_marginTop="8dp"
                android:id="@+id/comments"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/view_all_comments"
                android:visibility="gone"
                android:paddingBottom="8dp"
                android:paddingTop="2dp"
                android:text="View all comments"/>

            <include layout="@layout/add_comment_layout"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

